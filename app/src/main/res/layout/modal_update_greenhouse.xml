<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/greenhouseNameEditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Greenhouse name..."
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/greenhouseAddressEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Greenhouse address..."
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/updateGreenHouseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Save Changes"
        android:backgroundTint="#B1B1B1"/>
</LinearLayout>
