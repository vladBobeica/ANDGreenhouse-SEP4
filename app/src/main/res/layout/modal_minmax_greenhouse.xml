<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="Temperature (Â°C)"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"/>

        <EditText
            android:id="@+id/temperatureMinEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Min"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/temperatureMaxEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Max"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="Humidity (%)"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"/>

        <EditText
            android:id="@+id/humidityMinEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Min"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/humidityMaxEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Max"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="Light (LUX)"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"/>

        <EditText
            android:id="@+id/lightMinEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Min"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/lightMaxEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Max"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_weight="1" />

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/temperatureKeepRecommendedCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep recommended settings"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            android:id="@+id/saveMinMaxChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
